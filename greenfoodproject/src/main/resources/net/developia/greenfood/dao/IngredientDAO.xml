<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.developia.greenfood.dao.IngredientDAO">
	<select id="getMainIngredientList"
		resultType="MainIngredientDTO">
	<![CDATA[
         SELECT *
         FROM MAININGRCATE
       ]]>
	</select>

	<select id="getSubIngredientList" parameterType="int"
		resultType="SubIngredientDTO">
	<![CDATA[
         SELECT *
         FROM SUBINGRCATE
         WHERE MAININGRCATE_NO = #{mainIngredientNo}
       ]]>
	</select>
</mapper>