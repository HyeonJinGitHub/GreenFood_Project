<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.developia.greenfood.dao.IngredientsDAO">
<resultMap id="IngredientsDTO" type="IngredientsDTO">
    <result property="no" column="no"/>
    <result property="name" column="name"/>
</resultMap>

	<select id="findIngredients"  parameterType="String" resultType="IngredientsDTO">
		select * 
		from ingredients
	</select>
	
	<insert id="insertIngredients"  parameterType="String">
		Insert into ingredients (name) values (#{name});
	</insert>
	
	<select id="findIngredientsOne" parameterType="String" resultType="Recipe_IngredientsDTO">
		select no
		from recipe_ingredients
		where name == #{name}
	</select>
	
</mapper>